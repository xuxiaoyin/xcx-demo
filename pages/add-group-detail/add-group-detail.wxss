/* pages/add-group-detail/add-group-detail.wxss */
.list{
  display: flex;
  line-height: 80rpx;
  padding: 10rpx 24rpx;
  margin-bottom: 20rpx;
  background: #fff;
  font-size: 13px;
  align-items: center;
}
.list .name{
  flex: 0 0 160rpx;
  width: 160rpx;
}
.list .inp{
  height: 80rpx;
  flex: 1;
}
.list image{
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
}
.btn-wrap{
  display: flex;
  width: 500rpx;
  margin: 300rpx auto 0;
  justify-content: space-between;
  font-size: 14px;
}
.btn-wrap .btn{
  flex: 0 0 200rpx;
  line-height: 80rpx;
  background: #04c45f;
  color: #fff;
  text-align: center;
  border-radius: 12rpx;
}
.btn-wrap .cancel{
  background: #bbb;
}