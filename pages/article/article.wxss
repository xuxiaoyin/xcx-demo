/* pages/article/article.wxss */
page{
  padding: 20rpx 28rpx;
  background: #fff;
  box-sizing: border-box;
}
 .title{
  line-height: 50rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
}
.author{
  display: flex;
  margin-bottom: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.author image{
  flex: 0 0 50rpx;
  width: 50rpx; 
  height: 50rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.author text{
  flex: 1;
  line-height: 50rpx;
  font-size: 12px;
  color: #888;
}
.article-info{
  margin: 20rpx 0;
}
.article{
  line-height: 46rpx; 
  font-size: 13px;
  color: #222;
}
.public-info{
  margin: 20rpx 0;
  color: #888;
}
.public-info text{
  font-size: 12px;
}
.type-article{
margin-right: 100rpx;
}
.source{
  font-size: 12px;
}
.skim-info{
  display: flex;
  align-items: center;
  height: 50rpx;
  font-size: 12px;
}
.skim-info view{
  flex: 1;
  text-align: center;
  color: #a3a3a3;
}
.skim-info .active{
  color:#ce0000;
}
.skim-info view image{
  width: 24rpx;
}