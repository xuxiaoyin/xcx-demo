/* pages/schoolfellow/schoolfellow.wxss */
.list-wrap{
  position: relative;
  height: 138rpx;
  width: 100%;
  margin-bottom: 2rpx; 
  overflow: hidden;
}
.list-wrap movable-area {
  height: 138rpx;
  width: calc(100vw - 160rpx);
}
.list-wrap movable-view {
  height: 138rpx;
  width: 100vw;
  z-index: 999;
}
.list-wrap .delete-btn {
  position: absolute;
  top: 0;
  right: 0; 
  width: 160rpx;
  height: 135rpx;
  line-height: 135rpx;
  font-size: 14px;
  color: #fff;
  z-index: 1;
  background: #fc4c2a;
  text-align: center;
}
.list{
  display: flex;
  padding:16rpx 24rpx; 
  background: #fff;
}
.list .pic{
  flex: 0 0 106rpx;
  position: relative;
  width: 106rpx;
  height: 106rpx;
  margin-right: 24rpx;
}
.list .pic image{
  width: 106rpx;
  height: 106rpx;
  border-radius: 50%;
}
.list .pic .sum{
  position: absolute;
  top: 0;
  right: -10rpx;
  font-size: 10px;
  background: #fc4c2a;
  color: #fff;
  min-width: 20rpx;
  height: 40rpx;
  padding: 0 10rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 20rpx;
}
.list .text{
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list .top{
height: 60rpx;
line-height: 60rpx;
flex: 1;
}
.list .top .left{
  width: 80%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 16px;
}
.list .top .right{
  font-size: 12px;
  color: #888;
}
.list .bottom{
  height: 36rpx;
  line-height: 36rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 13px;
  color: #888;
}