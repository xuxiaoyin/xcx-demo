/* pages/notice/notice.wxss */
@import '/common/css/header.wxss';
.select-time picker {
  width: 160rpx;
}
.list-wrap .list {
  padding:20rpx 28rpx;
  background:#fff;
  margin-bottom:10rpx;
}
.list-wrap .title{
  line-height: 50rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
  font-weight: bold;
}
.list-wrap .content{
  height: 46rpx;
  line-height: 46rpx; 
  display:-webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient:vertical;
  overflow:hidden;
  font-size: 13px;
  color: #222;
}
.list-wrap .info{
  display: flex;
  align-items: center;
  height: 50rpx;
  font-size: 12px;
}
.list-wrap .item{
  flex: 1;
  text-align: center;
  color: #a3a3a3;
}
.list-wrap .item:nth-of-type(1){
  text-align: left;
}
.list-wrap .item:nth-of-type(3){
  text-align: right;
}
.list-wrap .item image{
  width: 24rpx;
  height: 24rpx;
}
  